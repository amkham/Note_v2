<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repost_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <LinearLayout
        android:id="@+id/repost_body_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray"
        android:visibility="visible"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"/>


        <LinearLayout
            android:id="@+id/repost_item1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/repost_status_ic1"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scaleType="center"
                android:layout_margin="15dp"
                android:src="@drawable/repost_check_state"/>

            <TextView
                android:id="@+id/repost_complete_text1"
                android:layout_weight="32"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black_500"
                android:layout_width="0dp"/>

            <ImageView
                android:id="@+id/repost_send_text1"
                android:layout_weight="58"
                android:layout_height="match_parent"
                android:src="@drawable/knopkapod"
                android:textStyle="bold|italic"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repost_item2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/repost_status_ic2"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scaleType="center"
                android:layout_margin="15dp"
                android:src="@drawable/repost_check_state"/>

            <TextView
                android:id="@+id/repost_complete_text2"
                android:layout_weight="32"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black_500"
                android:layout_width="0dp"/>


            <ImageView
                android:id="@+id/repost_send_text2"
                android:layout_weight="58"
                android:layout_height="match_parent"
                android:src="@drawable/knopkapod"
                android:textStyle="bold|italic"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repost_item3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/repost_status_ic3"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scaleType="center"
                android:layout_margin="15dp"
                android:src="@drawable/repost_check_state"/>

            <TextView
                android:id="@+id/repost_complete_text3"
                android:layout_weight="32"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black_500"
                android:layout_width="0dp"/>


            <ImageView
                android:id="@+id/repost_send_text3"
                android:layout_weight="58"
                android:layout_height="match_parent"
                android:src="@drawable/knopkapod"
                android:textStyle="bold|italic"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repost_item4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:id="@+id/repost_status"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scaleType="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/repost_check_state"/>

            <TextView
                android:id="@+id/repost_complete_text5"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:text="просмотр рекламного ролика"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                />

            <ImageView
                android:id="@+id/repost_send_text5"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:src="@drawable/knopkasmot"
                android:gravity="center|center_vertical"
                android:layout_marginTop="0dp"
                android:layout_width="0dp"
                android:onClick="adMob"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="3"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/disableAd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/knopkaotkl"
                android:onClick="disableAdMob"
                />

        </LinearLayout>




    </LinearLayout>






</RelativeLayout>