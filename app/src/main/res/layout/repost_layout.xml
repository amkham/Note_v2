<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repost_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/repost_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/bg_repost"
        android:background="@color/green_600"/>

    <LinearLayout
        android:id="@+id/repost_body_container"
        android:layout_below="@+id/repost_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_600"
        android:visibility="visible"
        >

        <LinearLayout

            android:id="@+id/repost_item1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/repost_status_ic1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scaleType="center"
                android:layout_margin="15dp"
                android:src="@drawable/repost_check_state"/>

            <TextView
                android:id="@+id/repost_complete_text1"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:layout_width="0dp"/>

            <TextView
                android:id="@+id/repost_send_text1"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="отправить другу >>"
                android:textStyle="bold|italic"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:src="@drawable/whatsapp_logo_png_2268"/>

        </LinearLayout>

